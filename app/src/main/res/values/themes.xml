<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Zenefit_Android" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Zenefit_Android" parent="Base.Theme.Zenefit_Android" />

    <style name="Theme.Zenefit_Android.Splash" parent="Base.Theme.Zenefit_Android">
        <item name="android:statusBarColor">@color/primary_normal</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:navigationBarColor">@color/primary_normal</item>
    </style>


    <style name="font_headline" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="lineHeight">48dp</item>
    </style>

    <style name="font_title_1" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32dp</item>
    </style>

    <style name="font_title_2" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="font_label_1" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28dp</item>
    </style>

    <style name="font_label_2" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">26dp</item>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fg_find_policy_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_policy_title"
            android:textAppearance="@style/font_label_1"
            android:textColor="@color/text_strong"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fg_find_policy_tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_policy_sub_title"
            android:textAppearance="@style/font_body_1"
            android:textColor="@color/text_alternative"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/fg_find_policy_tv_title"
            app:layout_constraintStart_toStartOf="@id/fg_find_policy_tv_title" />


        <ImageView
            android:id="@+id/fg_find_policy_iv_box"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_find_policy_closed_box"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintTop_toBottomOf="@id/fg_find_policy_tv_sub_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
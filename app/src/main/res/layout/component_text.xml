<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">

        <TextView
            android:id="@+id/component_text_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_disable"
            android:textAppearance="@style/font_label_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/component_text_tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font_label_1"
            android:textColor="@color/text_disable"
            app:layout_constraintTop_toBottomOf="@id/component_text_tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
        <View
            android:id="@+id/component_text_view_text_stroke"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/line_disable"
            app:layout_constraintStart_toStartOf="@id/component_text_tv_content"
            app:layout_constraintEnd_toEndOf="@id/component_text_tv_content"
            app:layout_constraintTop_toBottomOf="@id/component_text_tv_content" />

        <TextView
            android:id="@+id/component_text_tv_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/font_caption"
            android:textColor="@color/primary_normal"
            android:visibility="invisible"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/component_text_view_text_stroke"
            app:layout_constraintStart_toStartOf="@id/component_text_view_text_stroke" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
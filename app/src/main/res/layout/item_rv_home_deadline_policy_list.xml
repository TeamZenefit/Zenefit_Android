<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.zenefit.zenefit_android.data.remote.response.ResponseHomeData.ResponseHomePolicyListData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_rv_home_deadline_policy_list_iv_company"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginVertical="8dp"
            circle_set_image="@{data.policyName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_rv_home_deadline_policy_list_tv_policy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.supportPolicyTypeName}"
            android:textAppearance="@style/font_chips"
            android:textColor="@color/text_alternative"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/item_rv_home_deadline_policy_list_iv_company"
            app:layout_constraintStart_toEndOf="@id/item_rv_home_deadline_policy_list_iv_company" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{data.policyName}"
            android:textAppearance="@style/font_label_3"
            android:textColor="@color/text_normal"
            android:ellipsize="end"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="@id/item_rv_home_deadline_policy_list_tv_policy_type"
            app:layout_constraintEnd_toStartOf="@id/item_rv_home_deadline_policy_list_btn_apply"
            app:layout_constraintTop_toBottomOf="@id/item_rv_home_deadline_policy_list_tv_policy_type"
            app:layout_constraintBottom_toBottomOf="@id/item_rv_home_deadline_policy_list_iv_company" />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_rv_home_deadline_policy_list_btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_secondary_assistive_99"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{@string/home_deadline_until_date(data.endDate)}"
                android:textAppearance="@style/font_label_4"
                android:textColor="@color/primary_normal"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>